<div class="hero hero2">
  <div class="hero2__collection1">
    {%- if section.settings.image1 != blank -%}
    <img srcset="{%- if section.settings.image1.width >= 165 -%}{{ section.settings.image1 | img_url: '165x' }} 165w,{%- endif -%}
    {%- if section.settings.image1.width >= 360 -%}{{ section.settings.image1 | img_url: '360x' }} 360w,{%- endif -%}
    {%- if section.settings.image1.width >= 535 -%}{{ section.settings.image1 | img_url: '535x' }} 535w,{%- endif -%}
    {%- if section.settings.image1.width >= 720 -%}{{ section.settings.image1 | img_url: '720x' }} 720w,{%- endif -%}
    {%- if section.settings.image1.width >= 940 -%}{{ section.settings.image1 | img_url: '940x' }} 940w,{%- endif -%}
    {%- if section.settings.image1.width >= 1070 -%}{{ section.settings.image1 | img_url: '2000x' }} 2000w{%- endif -%}"
    src="{{ section.settings.image1 | img_url: '533x' }}"
    sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
    alt="{{ section.settings.image1.alt | escape }}"
    loading="lazy"
    width="{{ section.settings.image1.width }}"
    height="{{ section.settings.image1.height }}"
    class="hero2__bg">
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}

    <div class="hero2__content-container" style="background-color: {{ section.settings.background1 }}" >
			{%- if section.settings.button_label1 != blank -%}
				<a href="{{ section.settings.button_link1 }}" class="hero2__button" {{ section.shopify_attributes }} >
					{{ section.settings.button_label1 | escape }}
				</a>
			{%- endif -%}
		</div>
	</div>
  </div>

  <div class="hero2__collection2">
    {%- if section.settings.image2 != blank -%}
    <img srcset="{%- if section.settings.image2.width >= 165 -%}{{ section.settings.image2 | img_url: '165x' }} 165w,{%- endif -%}
    {%- if section.settings.image2.width >= 360 -%}{{ section.settings.image2 | img_url: '360x' }} 360w,{%- endif -%}
    {%- if section.settings.image2.width >= 535 -%}{{ section.settings.image2 | img_url: '535x' }} 535w,{%- endif -%}
    {%- if section.settings.image2.width >= 720 -%}{{ section.settings.image2 | img_url: '720x' }} 720w,{%- endif -%}
    {%- if section.settings.image2.width >= 940 -%}{{ section.settings.image2 | img_url: '940x' }} 940w,{%- endif -%}
    {%- if section.settings.image2.width >= 1070 -%}{{ section.settings.image2 | img_url: '2000x' }} 2000w{%- endif -%}"
    src="{{ section.settings.image2 | img_url: '533x' }}"
    sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
    alt="{{ section.settings.image2.alt | escape }}"
    loading="lazy"
    width="{{ section.settings.image2.width }}"
    height="{{ section.settings.image2.height }}"
    class="hero2__bg">
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}

    <div class="hero2__content-container" style="background-color: {{ section.settings.background2 }}">
			<div class="hero2__info">
				{%- if section.settings.button_label2 != blank -%}
					<a href="{{ section.settings.button_link2 }}" class="hero2__button" {{ section.shopify_attributes }}>
						{{ section.settings.button_label2 | escape }}
					</a>
				{%- endif -%}
			</div>
		</div>
  </div>
</div>

{% schema %}
{
  "name": "Hero two",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Left Image"
    },
    {
			"type": "text",
			"id": "button_label1",
			"default": "Button label",
			"label": "Left Label",
			"info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
		},
    {
      "type": "url",
      "id": "button_link1",
      "label": "Left Button link"
    },
    {
      "type": "color_background",
      "id": "background1",
      "label": "Left Background Color",
      "default": "linear-gradient(0deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4) 100%)"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Right Image"
    },
    {
			"type": "text",
			"id": "button_label2",
			"default": "Button label",
			"label": "Right Label",
			"info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
		},
    {
      "type": "url",
      "id": "button_link2",
      "label": "Right Button link"
    },
    {
      "type": "color_background",
      "id": "background2",
      "label": "Right Background Color",
      "default": "linear-gradient(0deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4) 100%)"
    }
  ],
  "presets": [
    {
      "name": "Hero two"
    }
  ]
}
{% endschema %}