			"type": "select",
			"id": "image1_alignment",
			"options": [{
        "value": "left",
        "label": "Left"
      },
      {
        "value": "center",
        "label": "Center"
      },
      {
        "value": "right",
        "label": "Right"
      }
    ],
    "default": "center",
    "label": "Image Alignment"
		},
    {
      "type": "range",
      "id": "img1_width",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Image size",
      "default": 70
    },   
    {
      "type": "select",
      "id": "info_alignment1",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Info Alignment"
    },
    {
      "type": "color_background",
      "id": "background1",
      "label": "Background Color",
      "default": "linear-gradient(0deg, rgba(255, 255, 255, 1) 100%, rgba(255, 255, 255, 1) 100%)"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Right Image"
    },  
      {
        "type": "select",
        "id": "image2_fit",
        "options": [{
            "value": "cover",
            "label": "Cover"
          },
          {
            "value": "contain",
            "label": "Contain"
          }
        ],
        "default": "contain",
        "label": "Image Fit"
      },
      {
        "type": "select",
        "id": "image2_alignment",
        "options": [{
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Image Alignment"
      },
      {
        "type": "range",
        "id": "img2_width",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Image size",
        "default": 70
      },   
      {
        "type": "select",
        "id": "info_alignment2",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Info Alignment"
      },
      {
        "type": "color_background",
        "id": "background2",
        "label": "Background Color",
        "default": "linear-gradient(0deg, rgba(255, 255, 255, 1) 100%, rgba(255, 255, 255, 1) 100%)"
      }
	],
	"presets": [{
		"name": "Long Columns"
	}]
}
