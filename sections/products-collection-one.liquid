{{ 'Collection1.css' | asset_url | stylesheet_tag }}

{%- if section.setting.collection.all_product_count -%}
  <div class="collection collection1">
    <div class="container">
      <div class="row">
        {%- for product in section.settings.collection.products limit: section.settings.total_products -%}
        <div class="{{ section.settings.xxl_col }} {{ section.settings.xl_col }} {{ section.settings.lg_col }} {{ section.settings.md_col }} {{ section.settings.sm_col }}">
          <div class="collection1__collection-item">
            <div class="collection1__product-img collection1__product-img--{{ section.settings.image_fit }} collection1__product-img--{{ section.settings.container_shape}}" style="background: {{ section.settings.background }}">
              {%- if product.images[0] != blank -%}
              <a href="{{ product.url }}" class="img-link">
                <img srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0] | image_url: width: 165 }} 165w,{%- endif -%}
                {%- if product.images[0].width >= 360 -%}{{ product.images[0] | image_url: width: 360 }} 360w,{%- endif -%}
                {%- if product.images[0].width >= 535 -%}{{ product.images[0] | image_url: width: 535 }} 535w,{%- endif -%}
                {%- if product.images[0].width >= 750 -%}{{ product.images[0] | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if product.images[0].width >= 1070 -%}{{ product.images[0] | image_url: width: 1070 }} 1070w,{%- endif -%}
                {%- if product.images[0].width >= 1500 -%}{{ product.images[0] | image_url: width: 1500 }} 1500w,{%- endif -%}
                {%- if product.images[0].width >= 2000 -%}{{ product.images[0] | image_url: width: 2000 }} 2000w,{%- endif -%}
                {{ product.images[0] | image_url }} {{ product.images[0].width }}w"
                  src="{{ product.images[0] | image_url: width: 1500 }}"
                  sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                  alt="{{ product.images[0].alt | escape }}" loading="lazy" width="{{ product.images[0].width }}"
                  height="{{ product.images[0].height }}" class="hero1__bg">
              </a>
              {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="collection1__product-info">
              <div class="collection1__product-details">
                {%- if section.settings.show_title == true -%}
                  <span class="collection1__product-title">{{ product.title }}</span>
                {% endif%}
                {%- if section.settings.show_price == true -%}
                  <span class="collection1__product-price">${{ product.price }}</span>
                {% endif%}
                <div>
                  {%- for block in section.blocks -%}
                    {%- case block.type -%}
                      {%- when '@app' -%}]
                        {%- render block -%}
                    {%- endcase -%}
                  {%- endfor -%}
                </div>
              </div>
              <div class="collection1__colors">
                <div class="collection1__color collection1__color--blue"></div>
                <div class="collection1__color collection1__color--black"></div>
              </div>
            </div>
          </div>
        </div>
        {% endfor%}
      </div>
    </div>
  </div>
{%- else -%}
<div class="collection collection1">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="collection1__collection-item">
          <div class="collection1__product-img collection1__product-img--rectangle ">
            <div class="collection1__heart"><i class="far fa-heart"></i></div>
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="collection1__product-info">
            <div class="collection1__product-details"><span class="collection1__product-title">Product</span><span
                class="collection1__product-price">$250</span></div>
            <div class="collection1__colors">
              <div class="collection1__color collection1__color--blue"></div>
              <div class="collection1__color collection1__color--black"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="collection1__collection-item">
          <div class="collection1__product-img collection1__product-img--rectangle">
            <div class="collection1__heart"><i class="far fa-heart"></i></div>
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="collection1__product-info">
            <div class="collection1__product-details"><span class="collection1__product-title">Product</span><span
                class="collection1__product-price">$250</span></div>
            <div class="collection1__colors">
              <div class="collection1__color collection1__color--blue"></div>
              <div class="collection1__color collection1__color--white"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="collection1__collection-item">
          <div class="collection1__product-img collection1__product-img--rectangle">
            <div class="collection1__heart"><i class="far fa-heart"></i></div>
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="collection1__product-info">
            <div class="collection1__product-details"><span class="collection1__product-title">Product</span><span
                class="collection1__product-price">$250</span></div>
            <div class="collection1__colors">
              <div class="collection1__color collection1__color--blue"></div>
              <div class="collection1__color collection1__color--white"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}

{% schema %}
  {
    "name": "Products Collection",
    "class": "spaced-section spaced-section--full-width",
    "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Featured Collection"
    },
    {
			"type": "range",
			"id": "total_products",
			"min": 1,
			"max": 16,
			"step": 1,
			"label": "Total Products",
			"default": 16
		},
    {
      "type": "select",
      "id": "container_shape",
      "options": [
        {
          "value": "rectangle",
          "label": "Rectangle"
        },
        {
          "value": "square",
          "label": "square"
        },
        {
          "value": "circle",
          "label": "circle"
        }
      ],
      "default": "rectangle",
      "label": "Product Shape"
    },
    {
      "type": "select",
      "id": "image_fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ],
      "default": "contain",
      "label": "Product Image Fit"
    },
    {
			"type": "select",
			"id": "xxl_col",
			"options": [{
					"value": "col-xxl-6",
					"label": "2 Columns"
				},
				{
					"value": "col-xxl-4",
					"label": "3 Columns"
				},
				{
					"value": "col-xxl-3",
					"label": "4 Columns"
				},
				{
					"value": "col-xxl-2",
					"label": "6 Column"
				}
			],
			"default": "col-xxl-3",
			"label": "XXL Devices"
		},
		{
			"type": "select",
			"id": "xl_col",
			"options": [{
					"value": "col-xl-6",
					"label": "2 Columns"
				},
				{
					"value": "col-xl-4",
					"label": "3 Columns"
				},
				{
					"value": "col-xl-3",
					"label": "4 Columns"
				},
				{
					"value": "col-xl-2",
					"label": "6 Column"
				}
			],
			"default": "col-xl-3",
			"label": "Extra Large Devices"
		},
		{
			"type": "select",
			"id": "lg_col",
			"options": [{
					"value": "col-lg-6",
					"label": "2 Columns"
				},
				{
					"value": "col-lg-4",
					"label": "3 Columns"
				},
				{
					"value": "col-lg-3",
					"label": "4 Columns"
				},
				{
					"value": "col-lg-2",
					"label": "6 Column"
				}
			],
			"default": "col-lg-3",
			"label": "Large Devices"
		},
		{
			"type": "select",
			"id": "md_col",
			"options": [{
					"value": "col-md-6",
					"label": "2 Columns"
				},
				{
					"value": "col-md-4",
					"label": "3 Columns"
				},
				{
					"value": "col-md-3",
					"label": "4 Columns"
				},
				{
					"value": "col-md-2",
					"label": "6 Column"
				}
			],
			"default": "col-md-3",
			"label": "Medium Devices"
		},
		{
			"type": "select",
			"id": "sm_col",
			"options": [{
					"value": "col-sm-6",
					"label": "2 Columns"
				},
				{
					"value": "col-sm-4",
					"label": "3 Columns"
				},
				{
					"value": "col-sm-3",
					"label": "4 Columns"
				},
				{
					"value": "col-sm-2",
					"label": "6 Column"
				}
			],
			"default": "col-sm-6",
			"label": "Small Devices"
		},
    {
      "type": "color_background",
      "id": "background",
      "label": "Background Color",
      "default": "linear-gradient(0deg, rgba(255, 255, 255, 1) 100%, rgba(255, 255, 255, 1) 100%)"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Products Collection"
    }
  ]
